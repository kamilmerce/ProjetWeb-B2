{% extends "base_auth.html.twig" %}

{% block body %}
<body>
    <h1>Édition de l'intervention</h1>

    <h2>Informations de l'intervention</h2>
    <ul>
        <li>ID: {{ intervention.id }}</li>
        <li>Date de début: {{ intervention.start_date }}</li>
        <li>Status: {{ intervention.status_suivi }}</li>
        <li>Degré d'urgence: {{ intervention.degre_urgence }}</li>
    </ul>

    <h2>Intervenants de l'intervention</h2>
    <ul>
        {% for intervenant in intervenants %}
        <li>{{ intervenant.name }} {{ intervenant.surname }}</li>
        {% endfor %}
    </ul>

    <h2>Modifier le statut et le degré d'urgence</h2>
    <form action="edit_intervention.php?id={{ intervention.id }}" method="post">
        <label for="status">Statut :</label>
        <select name="status" id="status">
            <option value="En attente">En attente</option>
            <option value="En cours">En cours</option>
            <option value="Clôturée">Clôturée</option>
            <option value="Annulée">Annulée</option>
        </select><br><br>
        
        <label for="urgence">Degré d'urgence :</label>
        <select name="urgence" id="urgence">
            <option value="Faible">Faible</option>
            <option value="Moyen">Moyen</option>
            <option value="Élevé">Élevé</option>
        </select><br><br>

        <button type="submit">Enregistrer</button>
    </form>
</body>
{% endblock %}
