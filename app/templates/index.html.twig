  <h1 class="title">Welcome To AccordEnergie</h1>

  <form action="" method="post">
      
      <h2>Welcome back</h2>
      <h3>Fill out the details below</h3>

      <div>
          <label for="email">Username</label>
          <input type="email" 
            name="email" 
            id="email" 
            placeholder="exemple@gamil.com"
          />
      </div>

      <div>
          <label for="password">Password</label>
          <input type="password" 
              name="password" 
              id="password" 
              placeholder="*********"
          />
      </div>

      <div>
          <input type="Submit" name="send" value="Login"/>
      </div>
  <p>
      <a href="register.php">No account yet ? </a>
  </p>

  </form>
