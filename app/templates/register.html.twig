{% extends "base_auth.html.twig" %}

{% block stylesheet %}
<link rel="stylesheet" type="text/css" href="/css/register.css"/>
 {% endblock %}

{% block body %}


<h1 class="title">Create account</h1>
  <form action="" method="post">
    <h3> Fill out the details bellow</h3>
    <div>
      <label for="name">Name</label>
      <input type="name" 
        name="name" 

        id="name" 
        placeholder="Name"
      />
    </div>

    <div>
      <label for="surname">Surname</label>
      <input type="surname" 
        name="surname" 

        id="surname" 
        placeholder="Surname"
      />
    </div>

    <div>
      <label for="email">Email</label>
      <input 
        type="email" 
        name="email" 
        id="email" 
        placeholder="Entrez votre email" 
        required 
      />
    </div>
    <div>
      <label for="email_cfg">Confirmation email</label>
      <input type="email" name="email_cfg" id="email_cfg" placeholder="Confirmation votre email" required />
    </div>
    <div>
      <label for="password">Password</label>
      <input 
        type="password" 
        name="password" 
        id="password" 
        placeholder="Entrez un mot de passe" 
        required 
      />
    </div>
    <div>
      <label for="password_cfg">Confirmation Password</label>
      <input 
        type="password" 
        name="password_cfg" 
        id="password_cfg" 
        placeholder="Confirmer votre mot de passe" 
        required 
      />
    </div>
    <div>
      <input type="submit" name="send" value="Crée le compte" />
    </div>

    <p>
      <a href="index.php">Déjà un compte ?</a>
    </p> 
  </form>


{% endblock %}