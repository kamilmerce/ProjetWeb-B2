{% extends "base_auth.html.twig" %}

{% block body %}
<body>
    {% if user.role == 'admin' %}
    <div style="margin-bottom: 20px;">
        <form action="search.php" method="GET">
            <input type="text" name="query" placeholder="Recherche...">
            <select name="type">
                <option value="intervention">Intervention</option>
                <option value="client">Client</option>
                <option value="intervenant">Intervenant</option>
                <option value="standardiste">Standardiste</option>
            </select>
            <button type="submit">Rechercher</button>
        </form>
    </div>

    <div style="width: 300px; height: 600px; overflow-y: scroll; border: 1px solid #ccc; padding: 10px; margin-bottom: 20px;">
        <h2>Liste des interventions</h2>
        <form action="search.php" method="GET">
            <select name="tri">
                <option value="id_intervention_asc">ID croissant</option>
                <option value="id_intervention_desc">ID décroissant</option>
            </select>
            <button type="submit">Trier</button>
        </form>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Client</th>
                        <th></th> 

                    </tr>
                </thead>
                <tbody>
                    {% for intervention in interventions %}
                    <tr>
                        <td>{{ intervention.id }}</td>
                        <td>{{ intervention.client_id}}
                        <td><a href="viewmore.php?type=intervention&id={{ intervention.id }}">View more</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
    </div>
    <div style="width: 300px; height: 300px; overflow-y: scroll; border: 1px solid #ccc; padding: 10px; margin-bottom: 20px;">
        <h2>Liste des clients</h2>
        <form action="search.php" method="GET">
            <select name="tri">
                <option value="id_client_asc">ID croissant</option>
                <option value="id_client_desc">ID décroissant</option>
                <option value="name_client_asc">ID croissant</option>
                <option value="name_client_desc">ID décroissant</option>
            </select>
            <button type="submit">Trier</button>
        </form>
            <table>
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>ID</th>
                        <th></th> 
                    </tr>
                </thead>
                <tbody>
                    {% for client in customers %}
                    <tr>
                        <td>{{ client.name }}</td>
                        <td>{{ client.surname }}</td>
                        <td>{{ client.user_id }}</td>
                        <td><a href="viewmore.php?type=client&id={{ client.user_id }}">View more</a></td> 
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
   </div>
    <div style="width: 300px; height: 300px; overflow-y: scroll; border: 1px solid #ccc; padding: 10px; margin-bottom: 20px;">
        <h2>Liste des intervenants</h2>  
        <form action="search.php" method="GET">
            <select name="tri">
                <option value="id_intervenant_asc">ID croissant</option>
                <option value="id_intervenant_desc">ID décroissant</option>
                <option value="name_intervenant_asc">ID croissant</option>
                <option value="name_intervenant_desc">ID décroissant</option>
            </select>
            <button type="submit">Trier</button>
        </form>
            <table>
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>ID</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for intervenant in intervenants %}
                    <tr>
                        <td>{{ intervenant.name }}</td>
                        <td>{{ intervenant.surname }}</td>
                        <td>{{ intervenant.user_id }}</td>
                        <td><a href="viewmore.php?type=intervenant&id={{ intervenant.user_id }}">View more</a></td>

                    </tr>
                    {% endfor %}
                </tbody>
            </table>
    </div>
    <div style="width: 300px; height: 300px; overflow-y: scroll; border: 1px solid #ccc; padding: 10px; margin-bottom: 20px;">
        <h2>Liste des standardiste</h2>
        <form action="search.php" method="GET">
            <select name="tri">
                <option value="id_standardiste_asc">ID croissant</option>
                <option value="id_standardiste_desc">ID décroissant</option>
                <option value="name_standardiste_asc">ID croissant</option>
                <option value="name_standardiste_desc">ID décroissant</option>
            </select>
            <button type="submit">Trier</button>
        </form>
            <table>
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>ID</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for standardiste in standardistes %}
                    <tr>
                        <td>{{ standardiste.name }}</td>
                        <td>{{ standardiste.surname }}</td>
                        <td>{{ standardiste.user_id }}</td>
                        <td><a href="viewmore.php?type=standardiste&id={{ standardiste.user_id }}">View more</a></td>

                    </tr>
                    {% endfor %}
                </tbody>
            </table>
    </div>
    {% if newCustomers != empty %}
        <div style="width: 300px; height: 300px; overflow-y: scroll; border: 1px solid #ccc; padding: 10px; margin-bottom: 20px;">
            <h2>Nouveaux clients</h2>  
            <form action="search.php" method="GET">
                <select name="tri">
                    <option value="id_newclient_asc">ID croissant</option>
                    <option value="id_newclient_desc">ID décroissant</option>
                    <option value="name_newclient_asc">ID croissant</option>
                    <option value="name_newclient_desc">ID décroissant</option>
                </select>
                <button type="submit">Trier</button>
            </form>
                <table>
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>ID</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for customer in newCustomers %}
                        <tr>
                            <td>{{ customer.name }}</td>
                            <td>{{ customer.surname }}</td>
                            <td>{{ customer.user_id }}</td>
                            <td><a href="verify.php?type=newCustomers&id={{ customer.user_id }}">Verify</a></td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
        </div>
    {% endif %}
{% endif %}
</body>
{% endblock %}

